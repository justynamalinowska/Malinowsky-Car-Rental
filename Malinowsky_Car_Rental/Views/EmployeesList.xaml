<UserControl x:Class="Malinowsky_Car_Rental.Views.EmployeesList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Malinowsky_Car_Rental.Views"
            
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Margin="40,5,40,5" Name="btnAdd" Content="Add" FontSize="18" FontWeight="Bold"/>
            <Button Margin="40,5,40,5" Name="btnUpdate" Content="Update" Grid.Column="1" FontSize="18" FontWeight="Bold"/>
            <Button Margin="40,5,40,5" Name="btnDelete" Content="Delete" Grid.Column="2" FontSize="18" FontWeight="Bold"/>
        </Grid>
        <DataGrid x:Name="gridEmployees" IsReadOnly="True" AutoGenerateColumns="False" SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTextColumn Header="EmployeeId" Width="*" Binding="{Binding id_pracownika}" Visibility="Hidden"/>
                <DataGridTextColumn Header="BaseId" Width="auto" Binding="{Binding id_bazy}"/>
                <DataGridTextColumn Header="pesel" Width="auto" Binding="{Binding pesel}"/>
                <DataGridTextColumn Header="Name" Width="auto" Binding="{Binding imie}"/>
                <DataGridTextColumn Header="Surname" Width="auto" Binding="{Binding nazwisko}"/>
                <DataGridTextColumn Header="BirthDate" Width="auto" Binding="{Binding data_urodzenia}"/>
                <DataGridTextColumn Header="PhoneNo" Width="auto" Binding="{Binding nr_telefonu}"/>
                <DataGridTextColumn Header="EmploymentDate" Width="auto" Binding="{Binding data_zatrudnienia}"/>
                <DataGridTextColumn Header="Position" Width="auto" Binding="{Binding stanowisko}"/>
                <DataGridTextColumn Header="HourlyRate" Width="auto" Binding="{Binding stawka_godzinowa}"/>
                <DataGridTextColumn Header="Country" Width="auto" Binding="{Binding kraj}"/>
                <DataGridTextColumn Header="City" Width="auto" Binding="{Binding miasto}"/>
                <DataGridTextColumn Header="Street" Width="auto" Binding="{Binding ulica}"/>
                <DataGridTextColumn Header="StreetNo" Width="auto" Binding="{Binding numer_domu}"/>
                <DataGridTextColumn Header="HouseNo" Width="auto" Binding="{Binding numer_lokalu}"/>
            </DataGrid.Columns>
            
        </DataGrid>
        
    </Grid>
</UserControl>

<Window x:Class="Malinowsky_Car_Rental.CustomersPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Malinowsky_Car_Rental"
        mc:Ignorable="d"
         Title="Customers Page" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" FontSize="17" Height="400" Width="750" Icon="/Images/Icon.png" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <Label Content="Name*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,77,0,0" Height="30" Width="67"/>
        <TextBox x:Name="txtName" Width="156" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Margin="160,81,0,0" Height="22"/>
        <Label Content="PESEL*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,47,0,0" Height="30" Width="67"/>
        <TextBox x:Name="txtPESEL" Width="156" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Margin="160,47,0,0" Height="22"/>
        <Label Content="Surname*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,111,0,0" Height="30" Width="86"/>
        <TextBox x:Name="txtSurname" Width="156" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Margin="160,115,0,0" Height="22"/>
        <Label Content="Contact No.*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,146,0,0" Height="30" Width="105"/>
        <TextBox x:Name="txtContactNo" Width="156" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Margin="160,150,0,0" Height="22"/>
        <Label Content="Country*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="41,44,0,0" Height="30" Width="84" Grid.Column="1"/>
        <TextBox x:Name="txtCountry" Width="156" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Margin="187,44,0,0" Height="22" Grid.Column="1"/>
        <Label Content="City*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="41,78,0,0" Grid.Column="1" Height="30" Width="84"/>
        <TextBox x:Name="txtCity" Width="156" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Margin="187,78,0,0" Grid.Column="1" Height="22"/>
        <Label Content="Street*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="41,108,0,0" Grid.Column="1" Height="30" Width="84"/>
        <TextBox x:Name="txtStreet" Width="156" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Margin="187,112,0,0" Grid.Column="1" Height="22"/>
        <Label Content="Apartment No.*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="41,142,0,0" Grid.Column="1" Height="30" Width="134"/>
        <TextBox x:Name="txtApartmentNo" Width="156" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Margin="187,146,0,0" Grid.Column="1" Height="22"/>
        <Label Content="House No.*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="41,177,0,0" Grid.Column="1" Height="30" Width="126"/>
        <TextBox x:Name="txtHouseNo" Width="156" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Margin="187,181,0,0" Grid.Column="1" Height="22"/>

        <Button x:Name="btnSave" Content="Save" Grid.Row="1" Width="120" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Click="btnSave_Click" Background="#FFEFA6E1" Margin="0,10"/>
        <Button x:Name="btnClose" Content="Close" Grid.Row="1" Grid.Column="1" Width="120" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Click="btnClose_Click" Background="#FFEFA6E1" Margin="0,10"/>

    </Grid>
</Window>
